---
import i18next from "i18next";
import { events } from "../data/InternationalEvents.js";

const currentLanguage = i18next.language;
---

<section>
    {events.map(event => (
        <a href={event.link} target="_blank" class="tarjeta-link">
            <div class="tarjeta">
                <img src={event.image} alt={event.title} width="100%" />
                <div class="contenido">
                    {currentLanguage === 'es' ? (
                        <>
                        <h3>{event.title}</h3>
                        {"date_es" in event && "location" in event && "description_es" in event
                            ? 
                            <p>
                                {event.description_es} <br /><br />
                                {event.date_es} <br />
                                {event.location}
                            </p>
                            :
                            <p>Pr√≥ximamente...</p><br /><br /><br />
                        }
                        </>
                    ) : currentLanguage === 'en' ? (
                        <>
                        <h3>{event.title}</h3>
                        {"date_en" in event && "location" in event && "description_en" in event
                            ? 
                            <p>
                                {event.description_en} <br /><br />
                                {event.date_en} <br />
                                {event.location}
                            </p>
                            :
                            <p>Comming soon...</p><br /><br /><br />
                        }
                        </>
                    ) : (
                        <>
                        <h3>{event.title}</h3>
                        {"date_fr" in event && "location" in event && "description_fr" in event
                            ? 
                            <p>
                                {event.description_fr} <br /><br />
                                {event.date_fr} <br />
                                {event.location}
                            </p>
                            :
                            <p>Comming soon...</p><br /><br /><br />
                        }
                        </>
                    )}
                </div>
            </div>
        </a>
    ))}
</section>

<style>
    section {
		padding: 5rem 0;
		display: flex;
		flex-direction: row;
		columns: 3;
		column-gap: 8.5rem;
		row-gap: 5rem;
		flex-wrap: wrap;
		justify-content: center;
	}

    .tarjeta-link {
		display: inline-block;
		text-decoration: none;
		color: inherit;
	}

	.tarjeta-link:hover .tarjeta {
		transform: scale(1.03);
		transition: transform 0.3s ease-in-out;
	}

	.tarjeta {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		width: 330px;
		height: 500px;
		color: black;
		box-shadow: 1px 1px 50px #a3a3a3;
		border-radius: 5px;
		overflow: hidden;
	}

	.tarjeta a {
		height: 30cap;
	}

	.tarjeta img {
		width: 100%;
		height: 60%;
		border-radius: 5px 5px 0 0;
	}

	.tarjeta .contenido {
		padding-left: 2rem;
		padding-right: 2rem;
		padding-bottom: 1rem;
		text-align: center;
	}

    @media (max-width: 768px) {
		.tarjeta {	
			width: 320px;	
			height: auto;
		}

		.tarjeta a {
			height: 100%;
			width: 100%;
		}
    }
</style>