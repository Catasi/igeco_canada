<style>
  footer {
    display: flex;
    flex-direction: column;
    margin: 1rem 5rem;
    padding-bottom: 5rem;
    color: black;
    position: relative;
    bottom: 0;
    width: auto;
  }
  footer > div {
    background-color: #07439c;
    display: grid;
    place-items: center;
    padding: 10px;
  }
  a {
    text-decoration: none;
    color: black;
  }

  a:hover {
    color: var(--primary-color);
  }

  h4 {
    border-bottom: 1px solid black;
    border-top: 1px solid black;
    padding: 1rem;
  }

  @media screen and (max-width: 768px) {
    footer {
      margin: 0;
    }
  }
</style>
