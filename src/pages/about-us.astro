---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("es");
---

<Layout>
    <main>
        <span>{t("about-us.bussiness")}</span>
        <h1>{t("about-us.title")}</h1>
        <p>{t("about-us.p1")}</p>
        <p>{t("about-us.p2")}</p>
        <p>{t("about-us.p3")}</p>
        <p>{t("about-us.p4")}</p>
    </main>
    <section>
        <div class="person">
            <img src="/img/BERND-ICON.webp" alt="Director General Hannover Fairs México" />
            <strong>Bernd Rohde</strong>
            <p>{t("about-us.person1")}</p>
        </div>
        <div class="person">
            <img src="/img/RODO-ICON.webp" alt="Rodolfo Carrizales" />
            <strong>Rodolfo Carrizales</strong>
            <p>{t("about-us.person2")}</p>
        </div>
        <div class="person">
            <img src="/img/AZUL-ICON.webp" alt="Azul Ogazón" />
            <strong>Azul Ogazón</strong>
            <p>{t("about-us.person3")}</p>
        </div>
    </section>
</Layout>

<style>
    main {
        margin-top: 3rem;
        padding: 3rem 6rem;
        text-align: justify;
        background-color: #f8f9fa;
    }

    h1 {
        margin-top: 0;
        margin-bottom: .5rem;
        font-size: 40px;
    }

    span {
        font-style: italic;
    }

    p {
        margin-bottom: 2rem;
    }
    
    section {
        margin-top: 2rem;
        display: flex;
        flex-direction: row;
        columns: 3;
        justify-content: center;
    }

    .person {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
    }

    .person img {
        width: 100%;
        height: 300px;
        border-radius: 50%;
        margin-right: 1rem;
    }

    @media (min-width: 768px) {
    .col-md-3 {
        flex: 0 0 auto;
        width: 25%;
    }
}
</style>