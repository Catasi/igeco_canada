---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");
---

<Layout>
    <main>
        <i>{t("about-us.bussiness")}</i>
        <h1>{t("about-us.title")}</h1>
        <p class="text-[20px]">{t("about-us.p1")}</p>
    </main>
    <section class="grid grid-cols-[repeat(auto-fit,_minmax(150px,_1fr))] sm:pl-20 sm:pr-20  justify-center gap-20 lg:pl-40 lg:pr-40">
        <div class="person">
            <img src="/img/about-us/BERND-ICON.webp" alt="Director General Hannover Fairs México" class="rounded-full shadow-lg"/>
            <strong>Bernd Rohde</strong>
            <p class="text-center">{t("about-us.person1")}</p>
        </div>
        <div class="person">
            <img src="/img/about-us/manuelferreira.webp" alt="CFO IGECO Mexico and Canada" class="rounded-full shadow-lg" />
            <strong>Manuel Ferreira</strong>
            <p class="text-center">{t("about-us.person2")}</p>
        </div>
        <div class="person">
            <img src="/img/about-us/rafael-ogazon.jpg" alt="Finance Deputy Director IGECO Canada" class="rounded-full shadow-lg" />
            <strong>Rafael Ogazón</strong>
            <p class="text-center">{t("about-us.person2")}</p>
        </div>
    </section>
</Layout>

<style>
    main {
        padding: 3rem 7rem 2rem 7rem;
        text-align: justify;
        /* background-color: #f8f9fa; */
    }

    h1 {
        margin-top: 0;
        margin-bottom: .5rem;
        font-size: 50px;
    }

    p {
        margin-bottom: 2rem;
    }

    .person {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
    }

    .person img {
        width: 225px;
        height: 225px;
        border-radius: 50%;
        margin-right: 1rem;
        margin-bottom: 1rem;
    }

    @media(min-width: 768px) {
        .col-md-3 {
            flex: 0 0 auto;
            width: 25%;
        }
    }
    @media(max-width: 600px) {
        section {
            display: block;
            column-count: 1;
            column-gap: 1rem;
        }

        .person {
            break-inside: avoid;
            margin-bottom: 2rem;
        }

        main {
            padding: 3rem 25px 2rem 25px;
        }
    
    }
</style>