---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";

changeLanguage("en");
---

<Layout>
    <main>
        <i>{t("about-us.bussiness")}</i>
        <h1>{t("about-us.title")}</h1>
        <p>{t("about-us.p1")}</p>
        <p>{t("about-us.p2")}</p>
        <p>{t("about-us.p3")}</p>
        <p>{t("about-us.p4")}</p>
    </main>
    <section>
        <div class="person">
            <img src="/img/about-us/BERND-ICON.webp" alt="Director General Hannover Fairs MÃ©xico" />
            <strong>Bernd Rohde</strong>
            <p>{t("about-us.person1")}</p>
        </div>
    </section>
</Layout>

<style>
    main {
        margin-top: 3rem;
        padding: 3rem 6rem 2rem 6rem;
        text-align: justify;
        background-color: #f8f9fa;
    }

    h1 {
        margin-top: 0;
        margin-bottom: .5rem;
        font-size: 40px;
    }

    p {
        margin-bottom: 2rem;
    }
    
    section {
        margin: 3rem 2rem 0 2rem;
        display: flex;
        flex-direction: row;
        columns: 3;
        justify-content: center;
        flex-wrap: wrap;
    }

    .person {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-bottom: 2rem;
    }

    .person img {
        width: 100%;
        height: 300px;
        border-radius: 50%;
        margin-right: 1rem;
    }

    @media(min-width: 768px) {
        .col-md-3 {
            flex: 0 0 auto;
            width: 25%;
        }
    }
    @media(max-width: 600px) {
        section {
            display: block;
            column-count: 1;
            column-gap: 1rem;
        }

        .person {
            break-inside: avoid;
            margin-bottom: 2rem;
        }

        main {
            padding: 3rem 25px 2rem 25px;
        }
    
    }
}
</style>